extends base


block content
    if errorMessage
        span=errorMessage
    form(method="POST") 
        input(type="text" placeholder="Title" name="videoTitle" required maxlength=80)
        input(type="text" placeholder="Description" required name="description" minlength=10)
        input(type="text" placeholder="Hashtags, seperated by comma." required name="hashtags")
        input(type="submit" value="Upload Video")